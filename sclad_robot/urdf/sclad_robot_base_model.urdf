<?xml version="1.0" encoding="utf-8"?>
<robot name="sclad_robot">
    
    <!-- ===== Root Link (Odometry Frame) ===== -->
    <link name="odom">
    </link>

    <!-- ===== Base Link ===== -->
    <link name="base_link">
        <visual name="">
            <origin xyz="0.0 0.0 0.055"/>
            <geometry>
                <cylinder radius="0.33" length="0.11"/>
            </geometry>
            <material name="white">
                <color rgba="1.0 1.0 1.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
    </link>
    
    <!-- ИСПРАВЛЕНО: Изменено с revolute (неправильно) на fixed (правильно) -->
    <joint name="base_link_to_odom" type="fixed">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="odom"/>
        <child link="base_link"/>
    </joint>

    <!-- ===== IMU Link - navX micro sensor ===== -->
    <link name="imu_link">
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.04 0.04 0.002"/>
            </geometry>
            <material name="red">
                <color rgba="1.0 0.0 0.0 0.8"/>
                <texture filename=""/>
            </material>
        </visual>
    </link>
    
    <joint name="base_link_to_imu" type="fixed">
        <origin xyz="0.0 0.0 0.055" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="imu_link"/>
    </joint>

    <!-- ===== Camera Link (Kinect) ===== -->
    <link name="camera_link">
        <visual name="">
            <origin xyz="0.0 0.0 0.06" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.28 0.07 0.12"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
    </link>

    <joint name="camera_to_base" type="fixed">
        <origin xyz="0.0 0.0 0.11" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="camera_link"/>
    </joint>

    <!-- ===== Wheels ===== -->
    <link name="left_wheel">
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
    </link>

    <link name="right_wheel">
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <material name="black">
                <color rgba="0.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
    </link>

    <joint name="right_wheel_to_base" type="continuous">
        <origin xyz="0.27 0.0 -0.0125" rpy="1.57 0.0 1.57"/>
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="left_wheel_to_base" type="continuous">
        <origin xyz="-0.27 0.0 -0.0125" rpy="1.57 0.0 1.57"/>
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

</robot>